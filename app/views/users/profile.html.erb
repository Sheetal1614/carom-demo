<h3>My Profile (Id: <%= @user.id %>)</h3>

<div class="row">
  <div class="col">

    <div class="row">
      <div class="col-4 text-right">Name:</div>
      <div class="col-8 text-left"><%= @user.name %></div>
    </div>

    <div class="row">
      <div class="col-4 text-right">Fmno:</div>
      <div class="col-8 text-left"><%= @user.fmno %></div>
    </div>

    <div class="row">
      <div class="col-4 text-right">Email:</div>
      <div class="col-8 text-left"><%= @user.email %></div>
    </div>

    <div class="row">
      <div class="col-4 text-right">Application admin:</div>
      <div class="col-8 text-left"><%= @user.application_admin? %></div>
    </div>

    <div class="row">
      <div class="col-4 text-right">Teams:</div>
      <div class="col-8 text-left"><%= @user.teams.collect(&:name).to_sentence %></div>
    </div>

    <div class="row">
      <div class="col-4 text-right">Created at:</div>
      <div class="col-8 text-left"><%= @user.created_at %></div>
    </div>

    <div class="row">
      <div class="col-4 text-right">Updated at:</div>
      <div class="col-8 text-left"><%= @user.updated_at %></div>
    </div>

  </div>
  <div class="col">
    <%= render partial: 'users/update_password_form' %>
  </div>
</div>